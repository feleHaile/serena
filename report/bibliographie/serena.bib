doi = {10.1080/01431161.2013.875629},
file = {:home/je/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Chahbi et al. - 2014 - Estimation of the dynamics and yields of cereals in a semi-arid area using remote sensing and the SAFY growth mod.pdf:pdf},
isbn = {0143-1161},
issn = {01431161},
journal = {International Journal of Remote Sensing},
number = {3},
