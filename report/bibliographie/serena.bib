issn = {16108167},
journal = {Urban Forestry and Urban Greening},
keywords = {High spatio-temporal NDVI time series,Phenological features,S-G filter,Spatial distribution patterns of phenology,Urban vegetation},
number = {November 2016},
pages = {43--57},
title = {{Urban vegetation phenology analysis using high spatio-temporal NDVI time series}},
