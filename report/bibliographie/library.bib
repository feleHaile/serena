pages = {97--107},
publisher = {Elsevier Inc.},
title = {{Remote sensing of spring phenology in northeastern forests: A comparison of methods, field metrics and sources of uncertainty}},
url = {http://dx.doi.org/10.1016/j.rse.2014.03.017},
volume = {148},
year = {2014}
}
