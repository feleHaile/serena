file = {:home/je/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Kandasamy et al.{\_}2013.pdf:pdf},
isbn = {1040552013},
issn = {1726-4189},
journal = {Biogeosciences},
