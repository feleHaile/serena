isbn = {9780819473356},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {Drought,Index insurance,Livestock mortality,MODIS,NDVI time series,Phenology},
pages = {44--55},
pmid = {23967112},
publisher = {Elsevier Inc.},
title = {{Early assessment of seasonal forage availability for mitigating the impact of drought on East African pastoralists}},
url = {http://dx.doi.org/10.1016/j.rse.2015.12.003},
volume = {174},
year = {2016}
}
@article{Yuhendra2012,
