file = {:home/je/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Atzberger, Eilers{\_}2011.pdf:pdf},
isbn = {0143-1161},
issn = {01431161},
journal = {International Journal of Remote Sensing},
number = {13},
pages = {3689--3709},
