doi = {10.1016/j.agrformet.2017.08.001},
file = {:media/je/JE3/Gbodjo{\_}2018/Biblio/Yield{\_}Crop{\_}Monitoring/jin{\_}2017b.pdf:pdf},
issn = {01681923},
journal = {Agricultural and Forest Meteorology},
keywords = {Google earth engine,Landsat,Maize,Yield estimation},
number = {July},
